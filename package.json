{
  "name": "auto-installer-harmonyos",
  "private": true,
  "version": "1.2.4",
  "description": "小白鸿蒙开源自助餐",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "start": " electron .",
    "electron:dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "electron:build": "vite build && electron-builder"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.xiaobai.installer",
    "productName": "AutoInstaller",
    "files": [
      "dist/**/*",
      "store/**/*",
      "electron/**/*",
      "core/**/*",
      "tools/**/*"
    ],
    "extraResources": [
      {
        "from": "tools",
        "to": "../tools",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "store",
        "to": "store",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "build"
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.7.7",
    "cross-env": "^7.0.3",
    "element-plus": "^2.8.3",
    "normalize.css": "^8.0.1",
    "qs": "^6.13.0",
    "simple-git": "^3.27.0",
    "vue": "^3.2.25",
    "vue-router": "^4.4.5",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^22.5.5",
    "@vitejs/plugin-vue": "^2.3.1",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "sass": "~1.32.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vite": "^2.9.5"
  }
}
